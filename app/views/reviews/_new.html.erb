<div class="modal fade" id="review_<%= booking.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Write a review for <%= booking.desk.user.first_name.capitalize %>'s desk</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="row">
            <div class="col-xs-12 col-md-9 col-lg-6">
              <div class="form-inputs">
                <%= simple_form_for [booking, review] do |f| %>
                  <div class="form-box-description mb-3">
                    <%= f.input_field :content,
                          class: 'form-input',
                          placeholder: 'describe your experience',
                          label: false,
                          :input_html => { :rows => 4 } %>
                  </div>
                  <div>
                    <%= f.input :desk_rating,
                          class: 'form-input',
                          collection: (1..5).to_a,
                          label: false %>
                  </div>
                  <%= f.submit "Send your review", class: 'btn-main' %>
                <% end %>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
