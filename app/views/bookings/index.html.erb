<div class="main-container">
<h1>My Bookings</h1>
<h2 class="underline"><span>As a guest</span></h2>
<% @guest_bookings.each do |booking| %>
  Desk: <%= booking.desk.title %>,
  Date: <%= booking.date %>,
  <%= booking.total_price %> €,
  Status: <%= booking.status %>
  <br>
<% end %>
<br><br>
<h2 class="underline"><span>As a host</span></h2>
<% @bookings.each do |booking| %>
  <% if booking.desk.user == current_user %>
    Date: <%= booking.date %>,
  <%= booking.total_price %> €,
  Status: <%= booking.status %>
  <% if booking.status == 'pending' %>
    <%= link_to 'Accept', approved_path(booking), method: :patch, class: "btn btn-primary" %>
    <%= link_to 'Decline', denied_path(booking), method: :patch, class: "btn btn-primary" %>
  <% end %>
  <br><br>
  <% end %>
<% end %>
</div>
