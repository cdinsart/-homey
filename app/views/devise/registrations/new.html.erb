<div class="main-container">
  <div class="row">
    <div class="col-xs-12 col-md-9 col-lg-6">
      <div class="form-inputs">
        <h2 class="underline"><span>Sign Up</span></h2>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

            <div class="form-box">
            <%= f.input_field :first_name,
                        class: 'form-input',
                        placeholder: 'First Name',
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "first_name" }%>
            </div>
            <div class="form-box">
            <%= f.input_field :last_name,
                        class: 'form-input',
                        placeholder: 'Last Name',
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "last_name" }%>
            </div>

            <div class="form-box">
            <%= f.input_field :email,
                        class: 'form-input',
                        placeholder: 'Email',
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            </div>
            <div class="form-box">
            <%= f.input_field :password,
                        class: 'form-input',
                        placeholder: 'Password',
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="form-box">
            <%= f.input_field :password_confirmation,
                        placeholder: 'Confirm your Password',
                        class: 'form-input',
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            </div>
            <!-- <div class="form-box"> -->
            <%= f.input_field :photo,
                        autofocus: true,
                        input_html: { autocomplete: "photo" }%>
            <%= f.input_field :photo_cache,
                        as: :hidden,
                        input_html: { autocomplete: "photo_cache" }%>
            <!-- </div> -->

            <%= f.button :submit, "SIGN UP", class: "btn-main" %>
        <% end %>
        <div class="text-center mt-2">
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
