      <% if Desk.last.photos.present? %>
        <div class="card-home-img" style="background-image: url('<%= cl_image_path Desk.last.photos.first.data %>');">
          <% if Desk.last.user.photo.present? %>
            <%= cl_image_tag Desk.last.user.photo, class: "avatar avatar-position" %>
          <% else %>
            <img src="buser.png" alt="" class="avatar avatar-position">
