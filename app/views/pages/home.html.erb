<div class="banner">
  <div class="banner-content">
    <h1 class="homepage-typed"></h1>
    <h2>Find and book a private workspace near you, from people like you</h2>
  </div>

    <form class="search-box" method="get" action="/desks">
      <input type="text" class="search-bar" id="address" name="location" placeholder="Enter your location...">
      <div class="search-box-line2">
        <input type="date" class="search-bar datepicker" name="date" placeholder="19 Jan">
        <div class="timeslots">
          <input type="checkbox" class="hidden" id="am" value="am" checked>
          <label for="am" class="timeslot active">AM</label>
        </div>
        <div class="timeslots">
          <input type="checkbox" class="hidden" id="pm" value="pm" checked>
          <label for="pm" class="timeslot active">PM</label>
        </div>
        <button type="submit" class="btn-main">
          SEARCH
        </button>
      </div>
    </form>

</div>

<div class="card-home-grid">
